<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tcrs_group8.Contollers.TrafficDashboardController">
    <!-- Top Menu -->
    <HBox alignment="TOP_RIGHT" spacing="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Button fx:id="helpButton" text="Help" />
        <Hyperlink fx:id="logoutLink" text="Logout" />
    </HBox>

    <!-- Main Layout -->
    <BorderPane prefHeight="600.0" prefWidth="800.0">
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                <Button fx:id="helpButton" text="Help" />
                <Hyperlink fx:id="logoutLink" text="Logout" />
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                <TextField fx:id="caseIDField" promptText="Case ID" />
                <TextField fx:id="userIDField" promptText="User ID" />
                <TextField fx:id="officerNameField" promptText="Officer Name" />
                <TextArea fx:id="officerNotesArea" promptText="Officer Notes" prefHeight="100.0" prefWidth="200.0" />
                <DatePicker fx:id="offenceDatePicker" promptText="Offence Date" />
                <TextField fx:id="offenceNumberField" promptText="Offence Number" />
                <TextField fx:id="pastOffencesField" promptText="Past Offences" />
            </VBox>
        </center>
        <bottom>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                <Button fx:id="submitButton" text="Submit" style="-fx-background-color: #0000FF; -fx-text-fill: white;" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
